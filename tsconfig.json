{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [ "src/app/*" ],
      "@core/*": [ "src/app/@core/*" ],
      "@layout/*": [ "src/app/layout/*" ],
      "@shared/*": [ "src/app/shared/*" ],
      "@root/*": [ "src/app/root/*" ],
      "@feature/*": [ "src/app/feature/*" ],
      "@spec-util/*": [ "src/app/spec-util/*" ]
    }
  }
}
